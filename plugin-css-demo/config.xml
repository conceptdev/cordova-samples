<?xml version='1.0' encoding='utf-8'?>
<widget id="co.conceptdev.webstandardsdemo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WebStandardsDemo</name>
    <description>
        A sample Apache Cordova application that adapts to the dual-screen Surface Duo.
    </description>
    <author href="http://github.com/conceptdev">
        Craig Dunn
    </author>
    <!-- the index page is links to both boxes.html and simple.html, 
         but you can uncomment these elements to make one of the other pages the 'root' of the app -->
    <content src="index.html" />
    <!--content src="boxes.html" /-->
    <!--content src="simple.html" /-->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
